<Window x:Class="rc_controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RC Controller" Height="720" Width="1280"
        AllowsTransparency="False">

    <!-- Make dropdowns and popups work properly inside Canvas -->
    <Window.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="False"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Window.Resources>

    <!-- Canvas allows free-form placement -->
    <Canvas Background="#011B40">

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Images/bg_grid1.png" Stretch="None" Height="692" Width="1279"/>
        </StackPanel>

        <!-- FORWARD button -->
        <Button Content="FORWARD" Width="128" Height="48" FontSize="22"
                Canvas.Left="356" Canvas.Top="495"
                PreviewMouseLeftButtonDown="ButtonForward_Pressed"
                PreviewMouseLeftButtonUp="ButtonForward_Released"/>

        <!-- BACKWARD button -->
        <Button Content="BACKWARD" Width="120" Height="56" FontSize="22"
                Canvas.Left="356" Canvas.Top="620"
                PreviewMouseLeftButtonDown="ButtonBackward_Pressed"
                PreviewMouseLeftButtonUp="ButtonBackward_Released"/>

        <!-- LEFT button -->
        <Button Content="LEFT" Width="121" Height="56" FontSize="22"
                Canvas.Left="247" Canvas.Top="559"
                PreviewMouseLeftButtonDown="ButtonLeft_Pressed"
                PreviewMouseLeftButtonUp="ButtonLeft_Released"/>

        <!-- RIGHT button -->
        <Button Content=" RIGTH" Width="120" Height="54" FontSize="22"
                Canvas.Left="449" Canvas.Top="555"
                PreviewMouseLeftButtonDown="ButtonRight_Pressed"
                PreviewMouseLeftButtonUp="ButtonRight_Released">
        </Button>

        <Button Content="M-" Canvas.Left="866" Canvas.Top="426" Height="73" Width="136" Click="mMinus"/>
        <Button Content="M+" Canvas.Left="678" Canvas.Top="428" Height="56" Width="148" Click="mPlus" FontSize="20"/>

        <TextBox x:Name="DebugTextBox"
                 Canvas.Left="298" Canvas.Top="436" Width="236" Height="40"
                 IsReadOnly="True" Text="Waiting for data..."/>

        <!-- Sensors display -->
        <TextBox x:Name="VoltageTextBox" Canvas.Left="65" Canvas.Top="617"
                 Width="128" Height="40" IsReadOnly="True" Text="Voltage : "/>
        <TextBox x:Name="TemperatureTextBox" Canvas.Left="65" Canvas.Top="495"
                 Width="128" Height="40" IsReadOnly="True" Text="Temperature : "/>
        <TextBox x:Name="HumidityTextBox" Canvas.Left="849" Canvas.Top="542"
                 Width="128" Height="40" IsReadOnly="True" Text="Humidity : "/>
        <TextBox x:Name="MoistureTextBox" Canvas.Left="596" Canvas.Top="582"
                 Width="128" Height="40" IsReadOnly="True" Text="Moisture : "/>

        <!-- Sensor buttons -->
        <Button Content="VOLTAGE" Canvas.Left="65" Canvas.Top="564" Height="36" Width="128" Click="VOLTAGE_BUTTON"/>
        <Button Content="HUMIDITY" Canvas.Left="849" Canvas.Top="594" Height="36" Width="128" Click="HUMIDITY_BUTTON"/>
        <Button Content="MOISTURE" Canvas.Left="596" Canvas.Top="532" Height="36" Width="128" Click="MOISTURE_BUTTON"/>
        <Button Content="TEMPERATURE" Canvas.Left="65" Canvas.Top="436" Height="36" Width="128" Click="TEMPERATURE_BUTTON"/>

        <!-- Servo 1 -->
        <Button Content="-" Canvas.Left="1058" Canvas.Top="282" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s1minus_press"
                PreviewMouseLeftButtonUp="s1minus_Released"/>
        <Button Content="+" Canvas.Left="1170" Canvas.Top="282" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s1plus_press"
                PreviewMouseLeftButtonUp="s1plus_Released"/>

        <!-- Servo 2 -->
        <Button Content="-" Canvas.Left="1058" Canvas.Top="377" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s2minus_press"
                PreviewMouseLeftButtonUp="s2minus_Released"/>
        <Button Content="+" Canvas.Left="1170" Canvas.Top="377" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s2plus_press"
                PreviewMouseLeftButtonUp="s2plus_Released"/>

        <!-- Servo 3 -->
        <Button Content="-" Canvas.Left="1058" Canvas.Top="487" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s3minus_press"
                PreviewMouseLeftButtonUp="s3minus_Released"/>
        <Button Content="+" Canvas.Left="1170" Canvas.Top="487" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s3plus_press"
                PreviewMouseLeftButtonUp="s3plus_Released"/>

        <!-- Servo 4 -->
        <Button Content="-" Canvas.Left="1058" Canvas.Top="601" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s4minus_press"
                PreviewMouseLeftButtonUp="s4minus_Released"/>
        <Button Content="+" Canvas.Left="1170" Canvas.Top="601" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s4plus_press"
                PreviewMouseLeftButtonUp="s4plus_Released"/>

        <!-- ComboBox (Dropdown now works correctly) -->
        <ComboBox x:Name="ComPortComboBox"
                  Canvas.Left="1083" Canvas.Top="44"
                  Width="163" Height="31" FontSize="14"
                  Background="White" Foreground="Black"
                  Focusable="True" IsHitTestVisible="True" StaysOpenOnEdit="True">
            <ComboBoxItem IsSelected="True">Select COM port</ComboBoxItem>
            <ComboBoxItem>COM1</ComboBoxItem>
            <ComboBoxItem>COM2</ComboBoxItem>
            <ComboBoxItem>COM3</ComboBoxItem>
            <ComboBoxItem>COM4</ComboBoxItem>
            <ComboBoxItem>COM5</ComboBoxItem>
            <ComboBoxItem>COM6</ComboBoxItem>
            <ComboBoxItem>COM7</ComboBoxItem>
            <ComboBoxItem>COM8</ComboBoxItem>
            <ComboBoxItem>COM9</ComboBoxItem>
            <ComboBoxItem>COM10</ComboBoxItem>
        </ComboBox>

        <!-- Connect button -->
        <Button Content="CONNECT" Canvas.Left="1100" Canvas.Top="101" Height="36" Width="128" Click="CONNECT_BUTTON"/>
        <Image Height="403" Canvas.Left="113" Canvas.Top="30" Width="661" Source="/mater_car.png"/>


    </Canvas>
</Window>
