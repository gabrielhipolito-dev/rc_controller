<Window x:Class="rc_controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RC Controller" Height="731" Width="1149">

    <!-- Canvas allows free-form placement -->
    <Canvas Background="#011B40">

        <!-- FORWARD button -->
        <Button Content="FORWARD" Width="150" Height="80" FontSize="22"
                Canvas.Left="225" Canvas.Top="103"
                PreviewMouseLeftButtonDown="ButtonForward_Pressed"
                PreviewMouseLeftButtonUp="ButtonForward_Released"/>

        <!-- BACKWARD button -->
        <Button Content="BACKWARD" Width="150" Height="80" FontSize="22"
                Canvas.Left="225" Canvas.Top="358"
                PreviewMouseLeftButtonDown="ButtonBackward_Pressed"
                PreviewMouseLeftButtonUp="ButtonBackward_Released"/>

        <!-- LEFT button -->
        <Button Content="LEFT" Width="150" Height="80" FontSize="22"
                Canvas.Left="65" Canvas.Top="219"
                PreviewMouseLeftButtonDown="ButtonLeft_Pressed"
                PreviewMouseLeftButtonUp="ButtonLeft_Released"/>

        <!-- RIGHT button -->
        <Button Content="RIGHT" Width="150" Height="80" FontSize="22"
                Canvas.Left="388" Canvas.Top="219"
                PreviewMouseLeftButtonDown="ButtonRight_Pressed"
                PreviewMouseLeftButtonUp="ButtonRight_Released"/>
        <Button Content="RIGHT" Width="150" Height="80" FontSize="22"
            Canvas.Left="388" Canvas.Top="219"
            PreviewMouseLeftButtonDown="ButtonRight_Pressed"
            PreviewMouseLeftButtonUp="ButtonRight_Released" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="M-" Canvas.Left="685" Canvas.Top="365" Height="56" Width="76" Click="mMinus" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="M+" Canvas.Left="846" Canvas.Top="365" Height="56" Width="76" HorizontalAlignment="Left" VerticalAlignment="Top" Click="mPlus"/>
        <TextBox x:Name="DebugTextBox"
         Canvas.Left="685"
         Canvas.Top="143"
         Width="237"
         Height="40"
         TextWrapping="Wrap"
         IsReadOnly="True"
         Text="Waiting for data..." HorizontalAlignment="Center" VerticalAlignment="Top" />

        <!---->
        <TextBox x:Name="VoltageTextBox"
         Canvas.Left="65"
         Canvas.Top="504"
         Width="128"
         Height="40"
         TextWrapping="Wrap"
         IsReadOnly="True"
         Text="Voltage : " HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="VoltageTextBox_TextChanged" />
        <TextBox  x:Name="TemperatureTextBox"
         Canvas.Left="574"
         Canvas.Top="504"
         Width="128"
         Height="40"
         TextWrapping="Wrap"
         IsReadOnly="True"
         Text="Temperature : " HorizontalAlignment="Left" VerticalAlignment="Center" />
        <TextBox  x:Name="HumidityTextBox"
         Canvas.Left="403"
         Canvas.Top="504"
         Width="128"
         Height="40"
         TextWrapping="Wrap"
         IsReadOnly="True"
         Text="Humidity : " HorizontalAlignment="Left" VerticalAlignment="Center" />
        <TextBox  x:Name="MoistureTextBox"
         Canvas.Left="236"
         Canvas.Top="504"
         Width="128"
         Height="40"
         TextWrapping="Wrap"
         IsReadOnly="True"
         Text="Moisture : " HorizontalAlignment="Left" VerticalAlignment="Top" />
        <!---->
        <Button Content="VOLTAGE" Canvas.Left="65" Canvas.Top="568" Height="36" Width="128" Click="VOLTAGE_BUTTON" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Content="HUMIDITY" Canvas.Left="403" Canvas.Top="568" Height="36" Width="128" Click="HUMIDITY_BUTTON" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="MOISTURE" Canvas.Left="236" Canvas.Top="568" Height="36" Width="128" Click="MOISTURE_BUTTON" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="TEMPERATURE" Canvas.Left="574" Canvas.Top="568" Height="36" Width="128" Click="TEMPERATURE_BUTTON" HorizontalAlignment="Left" VerticalAlignment="Center"/>



    </Canvas>
</Window>
