<Window x:Class="rc_controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RC Controller" Height="720" Width="1280"
        AllowsTransparency="False">

    <!-- Make dropdowns and popups work properly inside Canvas -->
    <Window.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="False"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Window.Resources>

    <!-- Canvas allows free-form placement -->
    <Canvas Background="#011B40">

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Images/bg_grid1.png" Stretch="None" Height="692" Width="1279"/>
        </StackPanel>

        <!-- FORWARD button -->
        <Button Content="FORWARD" Width="160" Height="62" FontSize="22"
                Canvas.Left="284" Canvas.Top="562"
                PreviewMouseLeftButtonDown="ButtonForward_Pressed"
                PreviewMouseLeftButtonUp="ButtonForward_Released" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <!-- BACKWARD button -->
        <Button Content="BACKWARD" Width="162" Height="61" FontSize="22"
                Canvas.Left="283" Canvas.Top="622"
                PreviewMouseLeftButtonDown="ButtonBackward_Pressed"
                PreviewMouseLeftButtonUp="ButtonBackward_Released" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- LEFT button -->
        <Button Content="LEFT" Width="101" Height="124" FontSize="22"
                Canvas.Left="182" Canvas.Top="559"
                PreviewMouseLeftButtonDown="ButtonLeft_Pressed"
                PreviewMouseLeftButtonUp="ButtonLeft_Released" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- RIGHT button -->
        <Button Content=" RIGTH" Width="98" Height="120" FontSize="22"
                Canvas.Left="444" Canvas.Top="561"
                PreviewMouseLeftButtonDown="ButtonRight_Pressed"
                PreviewMouseLeftButtonUp="ButtonRight_Released" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click">
        </Button>

        <Button Content="M-" Canvas.Left="580" Canvas.Top="591" Height="90" Width="194" Click="mMinus" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="M+" Canvas.Left="580" Canvas.Top="456" Height="90" Width="194" Click="mPlus" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <TextBox x:Name="DebugTextBox"
                 Canvas.Left="182" Canvas.Top="456" Width="360" Height="80"
                 IsReadOnly="True" Text="Waiting for data..." HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Sensors display -->
        <TextBox x:Name="VoltageTextBox" Canvas.Left="10" Canvas.Top="566"
                 Width="128" Height="63" IsReadOnly="True" Text="Voltage : " HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.516,1.486"/>
        <TextBox x:Name="TemperatureTextBox" Canvas.Left="10" Canvas.Top="456"
                 Width="128" Height="52" IsReadOnly="True" Text="Temperature : " HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.522,-0.63"/>
        <TextBox x:Name="HumidityTextBox" Canvas.Left="821" Canvas.Top="456"
                 Width="194" Height="52" IsReadOnly="True" Text="Humidity : "/>
        <TextBox x:Name="MoistureTextBox" Canvas.Left="821" Canvas.Top="577"
                 Width="194" Height="52" IsReadOnly="True" Text="Moisture : " RenderTransformOrigin="0.128,0.301" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Sensor buttons -->
        <Button Content="VOLTAGE" Canvas.Left="10" Canvas.Top="645" Height="36" Width="128" Click="VOLTAGE_BUTTON" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="HUMIDITY" Canvas.Left="821" Canvas.Top="519" Height="29" Width="194" Click="HUMIDITY_BUTTON" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="MOISTURE" Canvas.Left="821" Canvas.Top="646" Height="34" Width="194" Click="MOISTURE_BUTTON" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="TEMPERATURE" Canvas.Left="10" Canvas.Top="519" Height="36" Width="128" Click="TEMPERATURE_BUTTON" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Servo 1 -->
        <Button Content="-" Canvas.Left="1058" Canvas.Top="263" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s1minus_press"
                PreviewMouseLeftButtonUp="s1minus_Released" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="+" Canvas.Left="1170" Canvas.Top="263" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s1plus_press"
                PreviewMouseLeftButtonUp="s1plus_Released" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Servo 2 -->
        <Button Content="-" Canvas.Left="1058" Canvas.Top="377" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s2minus_press"
                PreviewMouseLeftButtonUp="s2minus_Released" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="+" Canvas.Left="1170" Canvas.Top="377" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s2plus_press"
                PreviewMouseLeftButtonUp="s2plus_Released" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Servo 3 -->
        <Button Content="-" Canvas.Left="1058" Canvas.Top="500" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s3minus_press"
                PreviewMouseLeftButtonUp="s3minus_Released" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="+" Canvas.Left="1170" Canvas.Top="499" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s3plus_press"
                PreviewMouseLeftButtonUp="s3plus_Released" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Servo 4 -->
        <Button Content="-" Canvas.Left="1058" Canvas.Top="629" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s4minus_press"
                PreviewMouseLeftButtonUp="s4minus_Released" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="+" Canvas.Left="1170" Canvas.Top="630" Height="56" Width="76" FontSize="40"
                PreviewMouseLeftButtonDown="s4plus_press"
                PreviewMouseLeftButtonUp="s4plus_Released" RenderTransformOrigin="0.453,1.347" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- ComboBox (Dropdown now works correctly) -->
        <ComboBox x:Name="ComPortComboBox"
                  Canvas.Left="1058" Canvas.Top="45"
                  Width="188" Height="74" FontSize="14"
                  Background="White" Foreground="Black"
                  Focusable="True" IsHitTestVisible="True" StaysOpenOnEdit="True" HorizontalAlignment="Center" VerticalAlignment="Top">
            <ComboBoxItem IsSelected="True">Select COM port</ComboBoxItem>
            <ComboBoxItem>COM1</ComboBoxItem>
            <ComboBoxItem>COM2</ComboBoxItem>
            <ComboBoxItem>COM3</ComboBoxItem>
            <ComboBoxItem>COM4</ComboBoxItem>
            <ComboBoxItem>COM5</ComboBoxItem>
            <ComboBoxItem>COM6</ComboBoxItem>
            <ComboBoxItem>COM7</ComboBoxItem>
            <ComboBoxItem>COM8</ComboBoxItem>
            <ComboBoxItem>COM9</ComboBoxItem>
            <ComboBoxItem>COM10</ComboBoxItem>
        </ComboBox>

        <!-- Connect button -->
        <Button Content="CONNECT" Canvas.Left="1058" Canvas.Top="153" Height="62" Width="188" Click="CONNECT_BUTTON" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Image Height="403" Canvas.Left="113" Canvas.Top="30" Width="661" Source="/mater_car.png"/>


    </Canvas>
</Window>
